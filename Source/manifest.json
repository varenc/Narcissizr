{
    "manifest_version": 2,
    "name": "Narcissizr",
    "version": "1.0",
    "description": "Makes the whole internet all about you!",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Narcissiz this"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["activeTab", "*://*/*", "storage"],
    "options_page": "options.html"
}

